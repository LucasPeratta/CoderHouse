<%- include("./partials/nav.ejs") %>

<h2>Lista de Productos</h2>

<% if(productos.length==0){ %>
<h2>No hay productos</h2>
<% } else{ %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Foto</th>
    </tr>
  </thead>
  <tbody>
    <% productos.forEach(p => { %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.price %></td>
      <td><img src="<%= p.img %> " width="100px" /></td>
    </tr>

    <% }) %>
  </tbody>
</table>

<% } %>
